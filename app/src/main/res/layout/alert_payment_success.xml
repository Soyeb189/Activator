<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAlertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_20sdp"
        tools:text="Success!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18sp"
        android:textColor="@color/appBlack"
        app:fontFamily="@font/segoe_pro_semi_bold"
        app:layout_goneMarginStart="@dimen/_26sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAlertSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Your requested payment link has been sent to userâ€™s phone number."
        app:layout_constraintStart_toStartOf="@id/tvAlertTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle"
        android:textSize="14sp"
        android:textColor="@color/subTittleColor"
        android:layout_marginTop="@dimen/_6sdp"
        app:fontFamily="@font/segoe_pro_regular"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnCashPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvAlertTitle"
        app:layout_constraintTop_toBottomOf="@id/tvAlertSubTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/yes_activate_btn"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"
        tools:visibility="visible"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnOnlinePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/tvAlertTitle"
        app:layout_constraintTop_toBottomOf="@id/tvAlertSubTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:src="@drawable/go_back_btn"
        android:background="?attr/selectableItemBackground"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>