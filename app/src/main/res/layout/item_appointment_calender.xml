<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rounded_corners"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp">

        <TextView
            android:id="@+id/tvCalenderView"
            style="@style/BaseTextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_46sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_dark_with_shape"
            android:drawableStart="@drawable/ic_calendar2"
            android:drawablePadding="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:text="Filter by Date"
            android:textColor="@color/subTittleColor"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_height="@dimen/_36sdp"
            android:layout_width="@dimen/_36sdp"
            android:padding="@dimen/_6sdp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/ripple_dark_with_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_6sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_refresh" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>