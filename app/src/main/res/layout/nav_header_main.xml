<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/_20sdp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_arch_white_doctor_nav_drawer"
            android:elevation="@dimen/_3sdp"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingBottom="@dimen/_9sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_nav_logo"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_logo_zhealth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvActivatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Muktadir Soyeb"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/appBlack"
                style="@style/BaseTextStyleBold"
                app:layout_constraintStart_toStartOf="@+id/iv_nav_logo"
                app:layout_constraintTop_toBottomOf="@+id/iv_nav_logo" />

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/tvActivatorType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pharmacy"
                android:textColor="@color/appBlack"
                style="@style/BaseTextStyleRegular"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="@+id/tvActivatorName"
                app:layout_constraintTop_toBottomOf="@+id/tvActivatorName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
